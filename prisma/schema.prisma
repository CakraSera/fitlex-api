generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id               String   @id @default(ulid())
  slug             String   @unique
  name             String
  description      String?
  price            Int
  featured_product Boolean?
  image_url        String?
  stock_quantity   Int      @default(0)
}
